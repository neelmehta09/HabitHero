@model IEnumerable<HabitHero.Models.Habit>

@{
    ViewData["Title"] = "Habits";
}

<h1>Habits</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Habit</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var habit in Model)
    {
        <tr>
            <td>@habit.Name</td>
            <td>@habit.Description</td>
            <td>@habit.StartDate.ToShortDateString()</td>
            <td>
                <a asp-action="Details" asp-route-id="@habit.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@habit.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@habit.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
